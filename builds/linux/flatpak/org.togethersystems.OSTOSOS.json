{
  "app-id": "org.togethersystems.OSTOSOS",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "22.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "ostosos",
  "finish-args": [
    "--share=ipc",
    "--socket=x11",
    "--socket=wayland",
    "--socket=pulseaudio",
    "--device=dri"
  ],
  "modules": [
    {
      "name": "ostosos",
      "buildsystem": "simple",
      "build-commands": [
        "install -D index.html /app/index.html"
      ],
      "sources": [
        {
          "type": "dir",
          "path": "."
        }
      ]
    }
  ]
}